generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONECTION")
}

/**
 * id - identificador
 * user_profile_id
 * type_authentication - email o google
 * authentication - contrasena o id de google
 * email - correo
 * creation_date - fecha de creacion
 * hidden - borrado?
 */
model Authentication {
  id                  Int      @id @default(autoincrement())
  user_profile_id     Int      @unique
  type_authentication String
  authentication      String
  email               String   @unique
  create_date         DateTime @default(now())
  hidden              Boolean  @default(false)
}
