generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONECTION")
}

model UserPublicData {
  id                Int    @id @default(autoincrement())
  user_name         String @unique
  description       String @default("")
  profile_image_url String @default("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQfwfzTPVw45cJcHNUp3sWUWLOkYAfQlAEBOQ&s")
  // Followers count
  followers         Int    @default(0)
  // Following count
  following         Int    @default(0)
  published_stories Int[]  @default([])
}
