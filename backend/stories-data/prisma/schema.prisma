generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONECTION")
}

model StorieData {
  id            Int      @id @default(autoincrement())
  // UPD del usuario
  author_id     Int
  title         String
  acts          Int[]    @default([])
  likes_count   Int      @default(0)
  comments      Int      @default(0)
  reports       Int      @default(0)
  visibility    Boolean  @default(false)
  creation_date DateTime @default(now())
  mody_date     DateTime @default(now())
}

model ActData {
  id       Int    @id @default(autoincrement())
  story_id Int
  title    String
  content  String
}
