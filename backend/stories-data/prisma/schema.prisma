generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONECTION")
}

model StorieData {
  id        Int    @id @default(autoincrement())
  // UPD del usuario
  author_id Int
  title     String
  synopsis  String
  acts      Int[]  @default([])

  likes_count    Int @default(0)
  comments_count Int @default(0)
  reports_count  Int @default(0)
  marked_count   Int @default(0)

  labels     String[] @default([])
  // short, medium, large
  duration   String   @default("Short")
  visibility Boolean  @default(false)

  creation_date DateTime @default(now())
  mody_date     DateTime @default(now())
}

model ActData {
  id         Int    @id @default(autoincrement())
  act_number Int
  story_id   Int
  title      String
  content    String
}
