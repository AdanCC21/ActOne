generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONECTION")
}

model StorieData {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  acts          Int[]
  likes_count   Int
  comments      Int
  reports       Int
  visibility    Boolean
  creation_date DateTime @default(now())
  mody_date     DateTime @default(now())
}

model ActData {
  id       Int    @id @default(autoincrement())
  story_id Int
  title    String
  content  String
}
